<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".CalorieResultFragment.CalorieResultFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cong2bg"
        app:layout_constraintVertical_chainStyle="packed"> <TextView
        android:id="@+id/text_message_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="You should take"
        android:textColor="#505050"
        android:textSize="24sp" />

        <TextView
            android:id="@+id/text_kcal_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="2500 Kcal"
            android:textColor="#8D92B0"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_message_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="per day to stay in your present weight."
            android:textColor="#505050"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cong2bg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cong2bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="@+id/three_dots"
        app:layout_constraintVertical_chainStyle="packed"/> <ImageView
    android:id="@+id/three_dots"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:scaleType="fitCenter"
    android:src="@drawable/threedotts"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cong2bg"
    app:layout_constraintBottom_toTopOf="@+id/buttonFinishRegistration"
    app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/buttonFinishRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_dots"
        app:layout_constraintVertical_bias="1.0"/> </androidx.constraintlayout.widget.ConstraintLayout>